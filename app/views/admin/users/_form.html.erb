<%= render 'admin/layouts/error_messages', :object => @user %>

<div class="row">
	<div class="col-xs-10">
		<div class="form-group">
			<%= f.label :login, raw("<div class='required'>&#10039;</div>Логин")%>
			<%= f.text_field :login, class: "form-control" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<div class="form-group">
			<%= f.label :email, raw("<div class='required'>&#10039;</div>Электронная почта")%>
			<%= f.email_field :email, class: "form-control" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-5">
		<div class="form-group">
			<%= f.label :password, "Пароль" %>
			<%= f.password_field :password, class: "form-control" %>
		</div>
	</div>
	<div class="col-xs-5">
		<div class="form-group">
			<%= f.label :password_confirmation, "Подтверждение пароля" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<div class="form-group">
			<%= f.label :name, "Имя" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<div class="form-group">
			<%= f.label :last_name, "Фамилия" %>
			<%= f.text_field :last_name, class: "form-control" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<div class="form-group">
			<%= f.label :middle_name, "Отчество" %>
			<%= f.text_field :middle_name, class: "form-control" %>
		</div>
	</div>
</div>
<div class="checkbox">
	<%= f.check_box(:is_admin) %>
	<%= label_tag(:users_is_admin, "Администратор") %>
</div>
<div class="checkbox">
	<%= f.check_box(:is_published) %>
	<%= label_tag(:users_is_published, "Публиковать") %>
</div>
<%= f.submit "Сохранить", class: "btn btn-primary" %>

