<%= render 'admin/layouts/error_messages', :object => @review %>

<div class="row">
	<div class="col-xs-8">
		<div class="form-group">
			<%= f.label :fio, raw("ФИО") %>
			<%= f.text_field :fio, class: "form-control" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-8">
		<div class="form-group">
			<%= f.label :event, raw("Мероприятие") %>
			<%= f.text_field :event, class: "form-control" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-8">
		<div class="form-group">
			<%= f.label :date, raw("Дата проведения") %>
			<%= f.text_field :date, class: "form-control" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		<div class="form-group">
			<%= f.label :rate, raw("Рейтинг") %>
			<input class="rating" max="5" min="0" name="reviews[rate]" value="<%= @review.rate.round %>" step="1" type="number">
		</div>
	</div>
</div>

<div class="form-group">
	<%= f.label :body, raw("Отзыв") %>
	<%= f.text_area :body, class: "form-control" %>
</div>

<div class="form-group">
	<a class="fancybox" href="<%= @review.avatar.url if @review.avatar? %>">
		<%= image_tag(@review.avatar.view_thumbnail.url) if @review.avatar? %>
	</a>
</div>
<div class="form-group">
	<%= f.label :avatar, "Изображение" %>
	<%= f.file_field :avatar %>
	<%= f.hidden_field :avatar_cache %>
</div>

<div class="checkbox">
	<%= f.check_box(:is_published) %>
	<%= label_tag(:reviews_is_published, "Публиковать") %>
</div>

<%= f.submit "Сохранить", class: "btn btn-primary" %>

