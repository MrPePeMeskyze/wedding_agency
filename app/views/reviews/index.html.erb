<% @title = @object.title.to_s %>
<section id="blogArchive">      
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="blog-breadcrumbs-area">
        <div class="container">
          <div class="blog-breadcrumbs-left">
            <ol class="breadcrumb">
              <li><a href="/">Главная</a></li>                  
              <li class="active"><%= @object.header %></li>
            </ol>
          </div>
        </div>
      </div>
    </div>        
  </div>      
</section>

<div class="row">
  <div class="col-lg-12 col-md-12">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <div class="blogArchive-area">
            <div class="row">
              <div class="col-md-12 col-sm-12">  
                <div class="blog-content">
                  <div class="single-Blog">
                    <div class="single-blog-left">
                      <div class="review-button readmore_area">
                        <a data-toggle="modal" data-target="#review_modal" data-hover="Добавить отзыв"><span>Добавить отзыв</span></a>  
                      </div>
                    </div>
                    <div class="single-blog-right">                    
                    </div>
                  </div>
                </div>                     
              </div>
            </div>                   
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :reviews_modal do %>
  <%= render partial: "layouts/review_modal" %>
<% end %>