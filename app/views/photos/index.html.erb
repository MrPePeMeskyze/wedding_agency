<% @title = @object.title.to_s %>
<section id="blogArchive">      
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="blog-breadcrumbs-area">
        <div class="container">
          <div class="blog-breadcrumbs-left">
            <h2><%= @object.header %></h2>
          </div>
          <div class="blog-breadcrumbs-right">
            <ol class="breadcrumb">
              <li><a href="/">Главная</a></li>                  
              <li class="active"><%= @object.header %></li>
            </ol>
          </div>
        </div>
      </div>
    </div>        
  </div>      
</section>

<section id="gallery_main">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="gallery-area">
          <% @albums.each do |album| %>
            <div class="my-simple-gallery" data-pswp-uid="<%= album.id %>">
              <div class="section-heading">
                <h2><%= album.name %></h2>
                <div class="line"></div>
              </div>
              <div class="row">
                <%= render partial: "photos/photo", collection: album.photos, :as => :photo %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render partial: "photos/gallery" %> 