<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
		<div class="modal-header">
		  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		  <h4 class="modal-title" id="myModalLabel">Обратная связь</h4>
		</div>
		<div class="modal-body">
		  <div class="appointment-msg">
		  </div>
		  <div class="appointment-area">
			<%= form_tag sendmail_path, class: "appointment-form", :id => "feedback", :onsubmit => "return false;" do %>
				<div class="col-md-12 col-sm-12">
				  <label class="control-label">Представьтесь <span class="required">*</span>
				  </label>
				  <input id="fio" name="fio" type="text" class="wp-form-control wpcf7-text" placeholder="ФИО">
				</div>
				<div class="col-md-12 col-sm-12">
				  <label class="control-label">Контактный email <span class="required">*</span>
				  </label>
				  <input id="email" name="email" type="mail" class="wp-form-control wpcf7-email" placeholder="Email адрес">  
				</div>
				<div class="col-md-12 col-sm-12">
				  <label class="control-label">Контактный номер телефона
				  </label>
				  <input id="phone" name="phone" type="text" class="wp-form-control wpcf7-text" placeholder="Телефонный номер">  
				</div>
				<div class="col-md-12 col-sm-12">    
			  		<textarea id="body" name="body" class="wp-form-control wpcf7-textarea" cols="30" rows="10" placeholder="Сообщение..."></textarea>
			  	</div>
			  	<div class="col-md-12 col-sm-6"> 
					<button class="feedback-button text-center wpcf7-submit button--itzel" type="submit">
						<i class="button__icon fa fa-share"></i>
						<span>Отправить сообщение</span>
					</button>  
				</div>
			<%end%>
		  </div>
		</div>                    
	  </div>
	</div>
</div>